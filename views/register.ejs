<%- include('partials/header.ejs'); %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="styles/main.css">
    </head>

    <body>
        <div style="display: flex; gap: 5rem; justify-content: center;">
            <div>
                <img src="icons/heart.png" style="height: 400px;" alt="Heart Image" class="mt-4">
            </div>
            <div>
                <form style="width: 500px; margin: 50px auto 50px;" action="/register" method="POST">
                    <% if(locals.error){ %>
                        <p name="error" style="color: red;">
                            <%= locals.error %>
                        </p>
                        <% }else if(locals.email_exists){ %>
                            <p name="existing-email" style="color: red;">
                                <%= email_exists %>
                                    <a href="/login" style="font-size: 0.8rem;">LOGIN HERE</a>
                            </p>
                            <% }else if(locals.password_mismatch){ %>
                                <p name="password-mismatch" style="color: red;">
                                    <%= password_mismatch %>
                                </p>
                                <% }else if(locals.registered){ %>
                                    <p name="registered" style="color: green;">
                                        <%= registered %>
                                    </p>
                                    <% } %>
                                        <div class="row mb-3">
                                            <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
                                            <div class="col-sm-6 mt-1">
                                                <input type="email" name="username" class="form-control"
                                                    id="inputEmail">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputName" class="col-sm-3 col-form-label">Name</label>
                                            <div class="col-sm-6 mt-1">
                                                <input type="text" name="name" class="form-control" id="inputName">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputPhone" class="col-sm-3 col-form-label">Phone no.</label>
                                            <div class="col-sm-6">
                                                <input type="number" name="phone" class="form-control" id="inputPhone">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputPassword1" class="col-sm-3 col-form-label">Password</label>
                                            <div class="col-sm-6 mt-1">
                                                <input type="password" name="password" class="form-control"
                                                    id="inputPassword1">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputPassword2" class="col-sm-3 col-form-label">Confirm
                                                password</label>
                                            <div class="col-sm-6 mt-3">
                                                <input type="password" name="recheck" class="form-control"
                                                    id="inputPassword2">
                                            </div>
                                        </div>


                                        <button type="submit" class="pushable mt-4">
                                            <span class="front">
                                                Sign up
                                            </span>
                                        </button>
                </form>
            </div>
        </div>
    </body>

    </html>


    <%- include('partials/footer.ejs'); %>